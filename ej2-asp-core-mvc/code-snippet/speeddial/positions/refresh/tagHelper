@{
    List<SpeedDialItem> items = new List<SpeedDialItem>();
    items.Add(new SpeedDialItem
    {
        IconCss = "e-icons e-cut"
    });
    items.Add(new SpeedDialItem
    {
        IconCss = "e-icons e-copy"
    });
    items.Add(new SpeedDialItem
    {
        IconCss = "e-icons e-paste"
    });
}

<div id="target" style="height:200px; position:relative; width:300px; border:1px solid;">
    <ejs-button style="float:right" id="refresh" content="Refresh" onclick="refresh()"></ejs-button>
    <ejs-speeddial id="speeddial" target="#target" position="BottomLeft" items="items" openIconCss="e-icons e-edit" closeIconCss="e-icons e-close"></ejs-speeddial>
</div>

<script>
    var speeddial;
    function refresh()
    {
        speeddial=document.getElementById('speeddial').ej2_instances[0];
        speeddial.refreshPosition();
    }
    
</script>