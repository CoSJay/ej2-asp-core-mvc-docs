@Html.EJS().ProgressBar("lineardeterminate")
                        .Type(Syncfusion.EJ2.ProgressBar.ProgressType.Linear).Value(100)
                        .Height("60")
                        .Animation(an => an.Enable(true).Delay(0).Duration(2000))
                        .Tooltip(tp => tp.Enable(true).Format("Progress: ${value}"))
                        .Render())