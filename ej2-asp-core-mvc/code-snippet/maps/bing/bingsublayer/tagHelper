
<ejs-maps id="maps" load="onLoad">
    <e-maps-layers>
        <e-maps-layer>
        </e-maps-layer>
        <e-maps-layer layerType="Geometry" type="SubLayer" shapeData="ViewBag.africa">
            <e-layersettings-shapesettings fill="blue"></e-layersettings-shapesettings>
        </e-maps-layer>
    </e-maps-layers>
</ejs-maps>

<script>

    function onLoad(args) {
          args.maps.getBingUrlTemplate("https://dev.virtualearth.net/REST/V1/Imagery/Metadata/CanvasLight?output=json&uriScheme=https&key=?").then(function(url) {
              args.maps.layers[0].urlTemplate= url;
          });
    }
  
</script>
