 @(Html.EJS().Chart("container")
    .Series(sr =>
    {
        sr.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line)
            .XName("x")
            .YName("y")
            .ErrorBar(eb => eb.VerticalError("error").Visible(true).ErrorBarColorMapping("color"))     
            .DataSource(ViewBag.dataSource).Add();
    })
      .Load("load").Render()
  )
