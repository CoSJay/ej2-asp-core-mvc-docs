@Html.EJS().PivotView("PivotView").Height("300").DataSourceSettings(dataSource => dataSource.DataSource((System.Data.DataTable)ViewBag.Data)
    .ExpandAll(false).ShowAggregationOnValueField(false).EnableSorting(true)
    .Rows(rows =>
    {
        rows.Name("Country").Add();
    }).Columns(columns =>
    {
        columns.Name("State").Add();
    }).Values(values =>
    {
        values.Name("Quantity").Add();
    })
    ).ShowFieldList(true).Render()

    