    GanttDataSourceCollection.Add(Record1);
    GanttDataSourceCollection.Add(Record2);
}

<div class="switch-container">
    <ejs-switch id="switch1" checked="false" change="onChange"></ejs-switch>
    <label for="switch1" class="switch">Dependency Line Show/Hide</label>
</div>

<ejs-gantt id='Gantt' dataSource="GanttDataSourceCollection" height="450px">
    <e-gantt-taskfields id="TaskId" name="TaskName" startDate="StartDate" endDate="EndDate" duration="Duration" progress="Progress" dependency="Predecessor" child="SubTasks">
    </e-gantt-taskfields>
</ejs-gantt>

<script type="text/javascript">
    function onChange(args) 
    {
        if (args.checked)
        {
            document.querySelector('.e-gantt-dependency-view-container')['style'].visibility = 'hidden';
        }
        else
        {
            document.querySelector('.e-gantt-dependency-view-container')['style'].visibility = 'visible';
        }
    }
</script>
<style>

    .switch-container {
        display: flex;
        align-items: center;
        padding: 10px 0px 10px 0px;
    }

    .switch {
        margin-left: 10px; 
    }

</style>